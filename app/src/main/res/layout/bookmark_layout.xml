<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        >


        <!--CryptoCurrency Image-->
        <ImageView
            android:id="@+id/bookmark_icon"
            android:layout_width="56sp"
            android:layout_height="56sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30sp" />

        <!--CryptoCurrency Initials -->
        <TextView
            android:id="@+id/bookmark_name"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bookmark_icon"
            android:layout_below="@+id/bookmark_icon"
            android:layout_marginTop="10sp"
            android:text="(BTC)"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <!--Divider-->
        <TextView
            android:id="@+id/bookmark_longitude"
            android:layout_width="10sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85sp"
            android:layout_marginTop="45sp"
            android:text="|"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <!--CryptoCurrency Name-->
        <TextView
            android:id="@+id/bookmark_latitude"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="40sp"
            android:text="Bitcoin"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/bookmark_delete_icon"
            android:layout_width="56sp"
            android:layout_height="56sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6sp"
            android:layout_marginTop="148sp"
            android:background="#7a253d54" />
    </RelativeLayout>


</RelativeLayout>